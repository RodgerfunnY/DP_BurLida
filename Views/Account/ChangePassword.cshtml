@{
    ViewData["Title"] = "Смена пароля";
}

<h1>Смена пароля</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="ChangePassword" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label for="CurrentPassword" class="control-label">Текущий пароль</label>
                <input type="password" name="CurrentPassword" class="form-control" required />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="NewPassword" class="control-label">Новый пароль</label>
                <input type="password" name="NewPassword" class="form-control" required />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <label for="ConfirmNewPassword" class="control-label">Подтвердите новый пароль</label>
                <input type="password" name="ConfirmNewPassword" class="form-control" required />
                <span class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Изменить пароль" class="btn btn-primary" />
                <a asp-action="Profile" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Profile" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Вернуться в личный кабинет
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}