@model DP_BurLida.Data.ModelsData.UserModelData

@{
    ViewData["Title"] = "Редактирование профиля";
}

<h1>Редактирование профиля</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditProfile" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />

            <div class="form-group">
                <label asp-for="Name" class="control-label">Имя</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Surname" class="control-label">Фамилия</label>
                <input asp-for="Surname" class="form-control" />
                <span asp-validation-for="Surname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email</label>
                <input asp-for="Email" class="form-control" type="email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Phone" class="control-label">Телефон</label>
                <input asp-for="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Сохранить изменения" class="btn btn-primary" />
                <a asp-action="Profile" class="btn btn-secondary">Отмена</a>
            </div>
        </form>
    </div>
</div>

<div class="mt-3">
    <a asp-action="Profile" class="btn btn-outline-secondary">
        <i class="fas fa-arrow-left"></i> Вернуться в личный кабинет
    </a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}