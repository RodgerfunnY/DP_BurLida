@{
    ViewData["Title"] = "Вход в систему";
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
}

<h1>Вход в систему</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="Login" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>

            <div class="form-group mb-3">
                <label for="email" class="control-label">Email</label>
                <input type="email" name="email" class="form-control" required 
                       placeholder="admin@example.com" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="password" class="control-label">Пароль</label>
                <input type="password" name="password" class="form-control" required 
                       placeholder="admin123" />
                <span class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <div class="form-check">
                    <input type="checkbox" name="rememberMe" class="form-check-input" />
                    <label class="form-check-label" for="rememberMe">Запомнить меня</label>
                </div>
            </div>

            <div class="form-group mb-3">
                <input type="submit" value="Войти" class="btn btn-primary w-100" />
            </div>
        </form>
        
        <div class="alert alert-info">
            <strong>Демо-доступ:</strong><br>
            Email: admin@example.com<br>
            Пароль: admin123
        </div>
    </div>
</div>

<div>
    <a asp-action="Register">Нет аккаунта? Зарегистрироваться</a>
</div>

<div>
    <a asp-controller="Home" asp-action="Index">Вернуться на главную</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}