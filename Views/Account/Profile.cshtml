@model DP_BurLida.Data.ModelsData.UserModelData

@{
    ViewData["Title"] = "Личный кабинет";
}

<h1>Личный кабинет</h1>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-header">
                <h4>Информация о пользователе</h4>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <dl class="row">
                            <dt class="col-sm-4">Имя:</dt>
                            <dd class="col-sm-8">@Model.Name</dd>

                            <dt class="col-sm-4">Фамилия:</dt>
                            <dd class="col-sm-8">@Model.Surname</dd>

                            <dt class="col-sm-4">Email:</dt>
                            <dd class="col-sm-8">@Model.Email</dd>

                            <dt class="col-sm-4">Телефон:</dt>
                            <dd class="col-sm-8">@Model.Phone</dd>
                        </dl>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <a asp-action="EditProfile" class="btn btn-primary">Редактировать профиль</a>
                <a asp-action="ChangePassword" class="btn btn-secondary">Изменить пароль</a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-header">
                <h5>Быстрые действия</h5>
            </div>
            <div class="card-body">
                <div class="list-group">
                    <a asp-controller="Order" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-list"></i> Мои заказы
                    </a>
                    <a asp-controller="Order" asp-action="Create" class="list-group-item list-group-item-action">
                        <i class="fas fa-plus"></i> Создать заказ
                    </a>
                    <a asp-controller="User" asp-action="Index" class="list-group-item list-group-item-action">
                        <i class="fas fa-users"></i> Управление сотрудниками
                    </a>
                    <a asp-action="Logout" class="list-group-item list-group-item-action text-danger">
                        <i class="fas fa-sign-out-alt"></i> Выйти из системы
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-secondary">
        <i class="fas fa-home"></i> Вернуться на главную
    </a>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/your-fontawesome-kit.js"></script>
}