@model IEnumerable<DP_BurLida.Data.ModelsData.OrderModelData>

@{
    ViewData["Title"] = "Архив заказов";
}

<h1>Архив заказов</h1>
<p>Отображаются только завершенные заказы</p>

<div class="row mb-3">
    <div class="col-md-6">
        <a asp-controller="Order" asp-action="Index" class="btn btn-primary">Вернуться к заказам</a>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" 
                       placeholder="Поиск по имени, фамилии, телефону, адресу..." 
                       value="@ViewBag.SearchTerm"
                       title="Поиск по всем полям заказа" />
                <button type="submit" class="btn btn-outline-secondary">
                    Поиск
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                {
                    <a asp-action="Index" class="btn btn-outline-danger">
                        Очистить
                    </a>
                }
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
{
    <div class="alert alert-info">
        Результаты поиска по запросу: "<strong>@ViewBag.SearchTerm</strong>"
        @if (Model != null && Model.Any())
        {
            <span class="badge bg-primary ms-2">Найдено: @Model.Count()</span>
        }
        else
        {
            <span class="badge bg-warning ms-2">Ничего не найдено</span>
        }
    </div>
}

<div class="table-responsive">
<table class="table table-striped">
    <thead>
        <tr>
            <th>Имя клиента</th>
            <th>Телефон</th>
            <th>Статус</th>
            <th>Дата выполнения</th>
            <th>Город</th>
            <th>Район</th>
            <th>Бригада бурения</th>
            <th>Бригада обустройства</th>
            <th>Дата завершения</th>
            <th>Действия</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameClient) @Html.DisplayFor(modelItem => item.SurnameClient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @if (!string.IsNullOrEmpty(item.Status))
                    {
                        <span class="badge @(item.Status switch {
                            "Ожидание" => "bg-warning",
                            "В работе" => "bg-primary", 
                            "Ремонт" => "bg-danger",
                            "Завершен" => "bg-success",
                            _ => "bg-secondary"
                        })">@item.Status</span>
                    }
                    else
                    {
                        <span class="text-muted">Не указан</span>
                    }
                </td>
                <td>
                    @if (item.WorkDate.HasValue)
                    {
                        @item.WorkDate.Value.ToString("dd.MM.yyyy")
                    }
                    else
                    {
                        <span class="text-muted">Не назначена</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.District)
                </td>
                <td>
                    @if (item.DrillingBrigade != null)
                    {
                        <span class="badge bg-primary">@item.DrillingBrigade.NameBrigade</span>
                    }
                    else
                    {
                        <span class="text-muted">Не назначена</span>
                    }
                </td>
                <td>
                    @if (item.ArrangementBrigade != null)
                    {
                        <span class="badge bg-success">@item.ArrangementBrigade.NameBrigade</span>
                    }
                    else
                    {
                        <span class="text-muted">Не назначена</span>
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationTimeData)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Подробности</a>
                </td>
            </tr>
        }
    </tbody>
</table>
</div>

@if (!Model.Any())
{
    <div class="alert alert-warning">
        <h4>Архив пуст</h4>
        <p>В архиве нет завершенных заказов.</p>
    </div>
}
