@model IEnumerable<DP_BurLida.Data.ModelsData.OrderModelData>

@{
    ViewData["Title"] = "Заказы";
}

<h1>Заказы</h1>

<div class="row mb-3">
    <div class="col-md-6">
        <a asp-action="Create" class="btn btn-primary">Создать новый заказ</a>
    </div>
    <div class="col-md-6">
        <form asp-action="Index" method="get" class="d-flex">
            <div class="input-group">
                <input type="text" name="searchTerm" class="form-control" 
                       placeholder="Поиск по имени, фамилии, телефону, адресу..." 
                       value="@ViewBag.SearchTerm"
                       title="Поиск по всем полям заказа" />
                <button type="submit" class="btn btn-outline-secondary">
                    <i class="fas fa-search"></i> Поиск
                </button>
                @if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
                {
                    <a asp-action="Index" class="btn btn-outline-danger">
                        <i class="fas fa-times"></i> Очистить
                    </a>
                }
            </div>
        </form>
    </div>
</div>

@if (!string.IsNullOrEmpty(ViewBag.SearchTerm as string))
{
    <div class="alert alert-info">
        <i class="fas fa-info-circle"></i>
        Результаты поиска по запросу: "<strong>@ViewBag.SearchTerm</strong>"
        @if (Model != null && Model.Any())
        {
            <span class="badge bg-primary ms-2">Найдено: @Model.Count()</span>
        }
        else
        {
            <span class="badge bg-warning ms-2">Ничего не найдено</span>
        }
    </div>
}
<div class="table-responsive">
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                Имя клиента
            </th>
            <th>
                Фамилия клиента
            </th>
            <th>
                Телефон
            </th>
            <th>
                Область
            </th>
            <th>
                Район
            </th>
            <th>
                Город
            </th>
            <th>
                Диаметр
            </th>
            <th>
                Цена за метр
            </th>
            <th>
                Насос
            </th>
            <th>
                Обустройство
            </th>
            <th>
                Информация
            </th>
            <th>
                Статус
            </th>
            <th>
                Дата создания
            </th>
            <th>
                Дата работы
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NameClient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SurnameClient)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Phone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Area)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.District)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Diameter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PricePerMeter)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Pump)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Arrangement)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Info)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Status)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreationTimeData)
                </td>
                <td>
                    @if (item.WorkDate.HasValue)
                    {
                        @item.WorkDate.Value.ToString("dd.MM.yyyy")
                    }
                    else
                    {
                        <span class="text-muted">Не назначена</span>
                    }
                </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Редактировать</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-outline-info">Подробности</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Удалить</a>
            </td>
            </tr>
        }
    </tbody>
</table>
</div>
