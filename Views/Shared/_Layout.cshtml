<!DOCTYPE html>
<html lang="ru">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DP_BurLida</title>
    <script type="importmap"></script>
    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    </environment>
    <environment exclude="Development">
        <link rel="preconnect" href="https://cdn.jsdelivr.net" />
        <link rel="preconnect" href="https://cdnjs.cloudflare.com" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/css/bootstrap.min.css" referrerpolicy="no-referrer" />
    </environment>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DP_BurLida.styles.css" asp-append-version="true" />
    <environment include="Development">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" referrerpolicy="no-referrer" />
    </environment>
    <environment exclude="Development">
        <link rel="preconnect" href="https://cdnjs.cloudflare.com" />
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css" referrerpolicy="no-referrer" />
    </environment>
</head>

<body>
    @{ var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
       var currentAction = ViewContext.RouteData.Values["action"]?.ToString(); }
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
            <div class="container">
                <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home" asp-action="Index">
                    <i class="fa-solid fa-screwdriver-wrench"></i>
                    <span>DP_BurLida</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse"
                    aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-lg-inline-flex justify-content-between">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link@(currentController=="Home" ? " active fw-semibold" : "")" asp-area="" asp-controller="Home" asp-action="Index">
                                <i class="fa-solid fa-house me-1"></i> Главная
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link@(currentController=="Order" ? " active fw-semibold" : "")" asp-area="" asp-controller="Order" asp-action="Index">
                                <i class="fa-solid fa-file-lines me-1"></i> Заявки
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link@(currentController=="User" ? " active fw-semibold" : "")" asp-area="" asp-controller="User" asp-action="Index">
                                <i class="fa-solid fa-users me-1"></i> Сотрудники
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link@(currentController=="Brigade" ? " active fw-semibold" : "")" asp-area="" asp-controller="Brigade" asp-action="Index">
                                <i class="fa-solid fa-people-group me-1"></i> Бригады
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link@(currentController=="Calendar" ? " active fw-semibold" : "")" asp-area="" asp-controller="Calendar" asp-action="Index">
                                <i class="fa-solid fa-calendar-days me-1"></i> Календарь
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link@(currentController=="Order" && currentAction=="Statistics" ? " active fw-semibold" : "")" asp-area="" asp-controller="Order" asp-action="Index">
                                <i class="fa-solid fa-chart-column me-1"></i> Статистика
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link@(currentController=="Archive" ? " active fw-semibold" : "")" asp-area="" asp-controller="Archive" asp-action="Index">
                                <i class="fa-solid fa-box-archive me-1"></i> Архив
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link@(currentController=="Sklad" ? " active fw-semibold" : "")" asp-area="" asp-controller="Sklad" asp-action="Index">
                                <i class="fa-solid fa-warehouse me-1"></i> Склад
                            </a>
                        </li>
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container py-4">
        <main role="main" class="pb-4">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted bg-light">
        <div class="container py-3">
            <div class="row">
                <div class="col-md-6">
                    <p>&copy; 2025 - DP_BurLida</p>
                </div>
                <div class="col-md-6 text-end">
                    <a asp-area="" asp-controller="Home" asp-action="Privacy" class="btn btn-outline-secondary btn-sm">
                        Политика конфиденциальности
                    </a>
                </div>
            </div>
        </div>
    </footer>
    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://cdn.jsdelivr.net/npm/jquery@3.7.1/dist/jquery.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.1/jquery.min.js" referrerpolicy="no-referrer"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.3/js/bootstrap.bundle.min.js" referrerpolicy="no-referrer"></script>
    </environment>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
