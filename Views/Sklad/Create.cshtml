@model DP_BurLida.Data.ModelsData.SkladModelData

@{
    ViewData["Title"] = "Добавление предмета";
}

<h1>Добавление предмета</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="All" class="text-danger"></div>
            
            <div class="form-group">
                <label asp-for="NameSubjecte" class="control-label">Название предмета</label>
                <input asp-for="NameSubjecte" class="form-control" />
                <span asp-validation-for="NameSubjecte" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Category" class="control-label">Категория</label>
                <select asp-for="Category" class="form-control">
                    <option value="">Выберите категорию</option>
                    <option value="Насосное оборудование">Насосное оборудование</option>
                    <option value="Техника">Техника</option>
                    <option value="Расходные материалы">Расходные материалы</option>
                    <option value="Автоматика">Автоматика</option>
                </select>
                <span asp-validation-for="Category" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Quantity" class="control-label">Количество</label>
                <input asp-for="Quantity" type="number" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label asp-for="Info" class="control-label">Информация</label>
                <textarea asp-for="Info" class="form-control" rows="3"></textarea>
                <span asp-validation-for="Info" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Добавить" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Вернуться к списку</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
