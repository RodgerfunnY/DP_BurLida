@model DP_BurLida.Data.ModelsData.UserModelData

@{
    ViewData["Title"] = "Удаление";
}

<h1>Вы уверены, что хотите удалить пользователя?</h1>

<div>
    <dl class="row">
        <dt class="col-sm-2">Имя</dt>
        <dd class="col-sm-10">@Model.Name</dd>
        <dt class="col-sm-2">Фамилия</dt>
        <dd class="col-sm-10">@Model.Surname</dd>
        <dt class="col-sm-2">Email</dt>
        <dd class="col-sm-10">@Model.Email</dd>
        <dt class="col-sm-2">Телефон</dt>
        <dd class="col-sm-10">@Model.Phone</dd>
    </dl>

    <form asp-action="Delete" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Удалить" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Отмена</a>
    </form>
</div>


